page{background:#f0f0f0;}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.header1{height:88rpx;line-height:88rpx;background:#fff;color:#252626;font-size:30rpx;padding-left:80rpx;margin-bottom:8rpx;box-shadow:0px 1px 1px 0px #e8e7e7;border-bottom:1px #d9d8d7 solid;position:relative;}

.bannerTop{background:#fff;padding:10rpx 0;margin-bottom:8rpx;box-shadow:0px 1px 1px 0px #e8e7e7;border-bottom:1px #d9d8d7 solid;}
.bannerTop .image{display:block;width:730rpx;height:220rpx;margin:0 10rpx;}

.tip{position:fixed;width:70%;top:50%;padding:5%;left:50%;z-index:1000;text-align:center;line-height:1.3;color:#fff;background:rgba(0,0,0,.75);border-radius:20rpx;transform:translate(-50%,-50%);-webkit-transform:translate(-50%,-50%);font-size:0.8rem;}
.alert,.confirm{position:fixed;width:100%;left:0;top:0;right:0;bottom:0;z-index:1000;}
.alert .content,.confirm .content{width:90%;background:rgba(255,255,255,.95);border-radius:10px;position:absolute;left:5%;top:50%;box-shadow:1px 1px 1px 1px rgba(0,0,0,.3);transform: translate(0,-50%);-ms-transform: translate(0,-50%);-moz-transform: translate(0,-50%);-webkit-transform: translate(0,-50%);}

.alert .txt,.confirm .txt{text-align:center;padding:20rpx 30rpx;line-height:1.2;font-size:24rpx;word-break:break-all;}

.alert_btn{width:100%;}
.alert_btn,
.confirm_btn_true,
.confirm_btn_false{border-top:1px #ddd solid;height:80rpx;line-height:80rpx;color:#111;font-size:40rpx;text-align:center;display:block;font-weight:normal;}
.confirm_btn{height:80rpx;}
.confirm_btn_true,
.confirm_btn_false{float:left;width:50%;font-weight:normal;}
.confirm_btn_true{border-right:1px #ddd solid;box-sizing:border-box;}



